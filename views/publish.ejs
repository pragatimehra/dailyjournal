<%- include("partials/header"); -%>

<h1>Publish</h1>
<form action="/publish" method="post">
    <div class="form-group">
      <label for="exampleFormControlInput1">Title</label>
      <input type="text" name="postTitle" class="form-control" id="exampleFormControlInput1" placeholder="Got placed at Google!" autocomplete="off">
    </div>
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Dear Diary</label>
      <textarea class="form-control" id="exampleFormControlTextarea1" rows="7" name="postContent" placeholder="You won't believe what happened today!"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Publish!</button>
  </form>

<%- include("partials/footer"); -%>